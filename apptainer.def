Bootstrap: docker
From: mambaorg/micromamba
Stage: spython-base

%files
. /tmp
%post
sed -i 's/name: fmesh/name: base/g' /tmp/requirements.yml
micromamba install -f /tmp/requirements.yml
MAMBA_DOCKERFILE_ACTIVATE=1


%runscript
exec /opt/conda/bin/python /tmp/fmesh.py "$@"
%startscript
exec /opt/conda/bin/python /tmp/fmesh.py "$@"
